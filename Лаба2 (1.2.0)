#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus"); //включить русский язык
	double R, r; //не целые числа
    const double PI = 3.14; //неизменяемое число
	cout << "Введите R и r:""\n"; //вывод на экран
	cin >> R >> r; //привязка к заданным символам
	cout << "Площадь кольца =" << (pow(R, 2) * pow(r, 2)) * PI; //вывод на экран и формула по которой решается задача 
}
